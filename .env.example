# SwapInterCam.ox Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Server Configuration
# ============================================
BACKEND_PORT=8001
SWEP_PORT=8000
WEB_PORT=3000
BACKEND_HOST=127.0.0.1
SWEP_HOST=127.0.0.1

# ============================================
# Environment
# ============================================
NODE_ENV=development
# Options: development, production, staging

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=contact@swapintercam.ox
EMAIL_PASS=your_password_here
EMAIL_FROM=noreply@swapintercam.ox
CONTACT_EMAIL=support@swapintercam.ox

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_DIRECTORY=./src/backend/logs
ENABLE_METRICS=true

# ============================================
# Security (Optional)
# ============================================
# JWT_SECRET=your_jwt_secret_here
# API_KEY=your_api_key_here
# SESSION_SECRET=your_session_secret_here

# ============================================
# Database (If needed in future)
# ============================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=swapintercam
# DB_USER=admin
# DB_PASS=password

# ============================================
# External Services (Optional)
# ============================================
# CLOUD_STORAGE_KEY=your_key_here
# ANALYTICS_ID=your_analytics_id
# SENTRY_DSN=your_sentry_dsn

# ============================================
# Feature Flags
# ============================================
ENABLE_AUTO_RECOVERY=true
ENABLE_STATE_PERSISTENCE=true
AUTO_SAVE_INTERVAL=30000
MAX_BACKUPS=10
